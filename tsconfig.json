{
	"compilerOptions": {
		"target": "es2024",
		"module": "node20",
		"moduleResolution": "Node16",
		"outDir": "./build",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"noEmit": true,
		"allowImportingTsExtensions": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "build"]
}
