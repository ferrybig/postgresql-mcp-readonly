{
	"name": "postgresql-mcp-readonly",
	"version": "1.0.0",
	"description": "A Model Context Protocol server for readonly PostgreSQL database access",
	"main": "build/index.js",
	"type": "module",
	"bin": {
		"postgresql-mcp-readonly": "build/index.js"
	},
	"publishConfig": {
		"provenance": true
	},
	"scripts": {
		"build": "tsc && esbuild src/index.ts --bundle --platform=node --format=esm --outfile=build/index.js --sourcemap --target=node24 --main-fields=module,main --packages=external",
		"dev": "node --experimental-transform-types --experimental-strip-types src/index.ts",
		"start": "node build/index.js",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"check": "biome check .",
		"check:fix": "biome check --write ."
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"postgresql",
		"database",
		"readonly"
	],
	"author": "Fernando van Loenhout",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ferrybig/postgresql-mcp-readonly"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.0.0",
		"pg": "^8.13.1",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.0",
		"@types/node": "^22.10.2",
		"@types/pg": "^8.11.10",
		"esbuild": "^0.25.11",
		"typescript": "^5.7.2"
	},
	"files": [
		"build"
	]
}
